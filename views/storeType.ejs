<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .card {
        width: 350px; /* Set the fixed width for the card */
        height: 400px; /* Set the fixed height for the card */
      }
      .card-img-top {
        width: 100%; /* Ensure the image width fills the card */
        height: 200px; /* Set the fixed height for the image */
        object-fit: contain; /* Maintain aspect ratio and crop image */
      }
      .btn-primary {
        display: flex;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <h1><%= type %></h1>
    <div class="container">
      <div class="row">
        <% stores.forEach((store) => { %>
        <div class="col-md-4">
          <div class="card mb-3">
            <img
              src="/files/<%= store.logo.split('\\').pop()%>"
              class="card-img-top"
              alt="<%= store.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= store.name %></h5>
              <p class="card-text">
                Distance: <%= store.location.coordinates %>
              </p>
              <a href="/stores/<%=store.id%>" class="btn btn-primary"
                >Explore</a
              >
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
